{
  "title": "API Gateway Dashboard",
  "tags": ["api-gateway", "dotnet", "monitoring"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "HTTP Requests per Second",
      "type": "stat",
      "targets": [{
        "expr": "rate(http_requests_received_total[5m])",
        "legendFormat": "{{method}} {{controller}} {{action}}",
        "refId": "A"
      }],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "HTTP Response Status Codes",
      "type": "barchart",
      "targets": [{
        "expr": "sum by (code) (rate(http_requests_received_total[5m]))",
        "refId": "A"
      }],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
    },
    {
      "id": 3,
      "title": "Request Duration (95th percentile)",
      "type": "graph",
      "targets": [{
        "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
        "legendFormat": "95th percentile",
        "refId": "A"
      }],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
    },
    {
      "id": 4,
      "title": "Active Requests",
      "type": "gauge",
      "targets": [{
        "expr": "sum(http_requests_received_total) - sum(http_requests_completed_total)",
        "refId": "A"
      }],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
    }
  ],
  "schemaVersion": 27,
  "version": 1
}